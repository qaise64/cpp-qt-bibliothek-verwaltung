    border-radius: 6px;
    padding: 4px 14px;
    margin: 0 2px;
    background-color: #2196F3;
    color: #FFFFF0;
}
QPushButton#actionButton:hover {
    background-color: #1976D2;
}

QPushButton#lendingcancelButton {
    min-width: 80px;
    max-width: 120px;
    min-height: 15px;
    max-height: 20px;
    font-size: 15px;
    font-weight: bold;
    border-radius: 6px;
    padding: 4px 0px;
    margin: 0 2px;
    background-color: #F44336;
    color: #FFFFF0;
}
QPushButton#lendingcancelButton:hover {
    background-color: #B71C1C;
}

/* --- Status-Label in Aktionen-Spalte --- */
QLabel#lendingstatusLabel {
    color: #FF6F00; /* Orange */
    font-weight: bold;
    font-size: 14px;
    padding: 2px 8px;
    border-radius: 4px;
}

/* --- Requests-Header und Listenelemente --- */
QWidget#requestsHeader {
    background: #f8f9fa;
    border-radius: 6px;
    margin-bottom: 6px;
}
QWidget#requestItem {
    border-radius: 6px;
    margin-bottom: 6px;
    padding: 4px 0;
}
QWidget#requestItem[status="pending"] {
    background-color: #FFFDE7;
}
QWidget#requestItem[status="approved"] {
    background-color: #E8F5E9;
}
QWidget#requestItem[status="rejected"] {
    background-color: #FFEBEE;
}

/* --- Allgemeine Layouts --- */
QWidget#requestsContainer, QWidget#returnsContainer {
    background: transparent;
    border-radius: 8px;
    padding: 0;
}
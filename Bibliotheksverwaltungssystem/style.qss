QPushButton#btnMyLendings:hover {
    background: #e3eafc;
    border: 1px solid #90caf9;
    color: #2c3e50;
}

QPushButton#btnBooksOverview:pressed,
QPushButton#btnAddBook:pressed,
QPushButton#btnManageLendings:pressed,
QPushButton#btnStatistics:pressed,
QPushButton#btnMyLendings:pressed {
    background: #bbdefb;
    border: 1.5px solid #2c3e50;
}


/*
 AddBookDialog Style
*/


/* --- Eingabefelder --- */
#titleEdit, #authorEdit, #yearSpinBox, #statusComboBox {
    border: 1px solid #CED4DA;
    border-radius: 4px;
    padding: 4px 8px;
    background-color: white;
    min-height: 30px;
    max-height: 60px;
}
#descriptionEdit {
    border: 1px solid #CED4DA;
    border-radius: 4px;
    padding: 8px;
    background-color: white;
    min-height: 120px;
}

/* --- Bildvorschau --- */
#imageLabel {
    background-color: white;
    color: #6C757D;
    border: 1px solid #CED4DA;
}

/* --- Trennlinien --- */
QFrame[frameShape="4"] { /* QFrame::HLine */
    color: #E0E0E0;
}

/* --- Abschnittsüberschriften --- */
QLabel[objectName^="sectionTitle"] {
    color: #2C3E50;
    font: bold 12pt "Arial";
}

/* --- Buttons --- */
#selectImageButton {
    background-color: #3498DB;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    height: 40px;
    font-weight: bold;
}
#selectImageButton:hover {
    background-color: #2980B9;
}
#okButton {
    background-color: #2ECC71;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    height: 40px;
    font-weight: bold;
}
#okButton:hover {
    background-color: #27AE60;
}
#cancelButton {
    background-color: #E74C3C;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    height: 40px;
    font-weight: bold;
}
#cancelButton:hover {
    background-color: #C0392B;
}



/* Moderne Bücherkarten-Stile */
#bookCard {
    background-color: white;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
    transition: all 0.2s;
}

#bookCard:hover {
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    transform: translateY(-3px);
}

#bookCard[status="verfügbar"] {
    border-left: 4px solid #4CAF50;
}

#bookCard[status="ausgeliehen"] {
    border-left: 4px solid #FFC107;
}

#bookCover {
    background-color: #f5f5f5;
    border-radius: 4px;
    margin-right:10px;
}

#bookTitle {
    color: #333;
    font-size: 14px;
}

#bookAuthor {
    color: #555;
    font-size: 13px;
}

#bookYear {
    color: #777;
    font-size: 12px;
}

#bookDescription {
    color: #666;
    font-size: 12px;
}

#statusAvailable {
    color: #4CAF50;
    font-weight: bold;
    font-size: 12px;
}

#statusUnavailable {
    color: #FFC107;
    font-weight: bold;
    font-size: 12px;
}

#booksContainer {
    
    background-color: #FFFFF0;

}

#bookSearchBox {
    border-radius: 18px;
    padding: 8px 15px;
    border: 1px solid #ddd;
    background-color: #f9f9f9;
}

#bookSearchBox:focus {
    border-color: #4285F4;
    background-color: white;
}

#lendButton {
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 5px 10px;
}

#returnButton {
    background-color: #FFC107;
    color: white;
    border: none;
    border-radius: 4px;
    padding: 5px 10px;
}

#editButton, #deleteButton {
    border: 1px solid #ddd;
    border-radius: 4px;
    padding: 5px 10px;
    background-color: #f8f8f8;
}

#deleteButton:hover {
    background-color: #ffebee;
    border-color: #f44336;
}

#editButton:hover {
    background-color: #e8f0fe;
    border-color: #4285F4;
}

#noResultsLabel {
    font-size: 16px;
    color: #777;
    padding: 40px;
}


/* ===== Tab Widget Styling ===== */
QTabWidget {
    background-color: #FFFFF0;  /* Ivory - consistent with main background */
    border: none;
}

QTabWidget::pane {
    border: 1px solid #C0C5C9;  /* Cool Gray for subtle borders */
    border-radius: 8px;
    border-top-left-radius: 0;
    background-color: #FFFFF0;
    padding: 16px;
}

QTabBar::tab {
    background-color: #FFFFF0;
    color: #457B9D;
    min-width: 180px;
    padding: 12px 20px;
    margin-right: 4px;
    border: 1px solid #C0C5C9;
    border-bottom: none;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-size: 15px;
    font-weight: 500;
    transition: all 0.2s ease;
}

QTabBar::tab:selected {
    background-color: #457B9D;  /* Deep Blue for active tab */
    color: #FFFFF0;
    font-weight: bold;
    border-color: #457B9D;
    padding-bottom: 13px;  /* Overlap with pane border */
}

QTabBar::tab:hover:!selected {
    background-color: #FFD166;  /* Warm Yellow hover */
    color: #2c3e50;
    border-color: #FFD166;
}

/* ===== Table Widget Styling ===== */
QTableWidget {
    background-color: #FFFFF0;
    alternate-background-color: #f8f9fa;
    border: 1px solid #C0C5C9;
    border-radius: 6px;
    gridline-color: #e8eaed;
    selection-background-color: #FFD166;
    selection-color: #2c3e50;
    font-size: 14px;
}

QTableWidget::item {
    padding: 10px 12px;
    min-height: 40px;
}

QTableWidget::item:selected {
    background-color: #FFD166;
    color: #2c3e50;
}

QTableWidget::item:hover {
    background-color: rgba(255, 209, 102, 0.3);  /* Light yellow hover */
}

QTableWidget QHeaderView::section {
    background-color: #457B9D;
    color: #FFFFF0;
    padding: 12px 10px;
    border: none;
    border-right: 1px solid rgba(255, 255, 240, 0.2);
    font-weight: bold;
    font-size: 14px;
}

QTableWidget QHeaderView::section:hover {
    background-color: #38B6FF;  /* Turquoise on hover */
}

/* ===== Action Buttons Styling ===== */
#approveButton, QPushButton[objectName="approveButton"] {
    background-color: #4CAF50;
    color: #FFFFF0;
    border: none;
    border-radius: 6px;
    padding: 8px 20px;
    min-width: 120px;
    font-size: 15px;
    font-weight: bold;
    transition: all 0.2s ease;
}

#approveButton:hover, QPushButton[objectName="approveButton"]:hover {
    background-color: #45a049;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(76, 175, 80, 0.3);
}

#approveButton:pressed, QPushButton[objectName="approveButton"]:pressed {
    background-color: #388e3c;
    transform: translateY(0);
    box-shadow: none;
}

#rejectButton, #AbbrechenButton, QPushButton[objectName="rejectButton"] {
    background-color: #FF6F00;  /* Using your Orange color */
    color: #FFFFF0;
    border: none;
    border-radius: 6px;
    padding: 8px 20px;
    min-width: 120px;
    font-size: 15px;
    font-weight: bold;
    transition: all 0.2s ease;
}

#rejectButton:hover, #AbbrechenButton:hover, QPushButton[objectName="rejectButton"]:hover {
    background-color: #e55100;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(255, 111, 0, 0.3);
}

#rejectButton:pressed, #AbbrechenButton:pressed, QPushButton[objectName="rejectButton"]:pressed {
    background-color: #cc5200;
    transform: translateY(0);
    box-shadow: none;
}

/* ===== Secondary Action Buttons ===== */
QPushButton[objectName="returnButton"] {
    background-color: #FFD166;
    color: #2c3e50;
    border: none;
    border-radius: 6px;
    padding: 8px 16px;
    min-width: 100px;
    font-size: 14px;
    font-weight: bold;
    transition: all 0.2s ease;
}

QPushButton[objectName="returnButton"]:hover {
    background-color: #ffc947;
    transform: translateY(-1px);
    box-shadow: 0 2px 6px rgba(255, 209, 102, 0.4);
}

/* ===== Disabled State ===== */
QPushButton:disabled {
    background-color: #C0C5C9;
    color: #8a8f94;
    border: none;
    transform: none;
    box-shadow: none;
}

/* ===== Focus States for Accessibility ===== */
QPushButton:focus {
    outline: 2px solid #38B6FF;
    outline-offset: 2px;
}

QTableWidget:focus {
    border: 2px solid #457B9D;
}

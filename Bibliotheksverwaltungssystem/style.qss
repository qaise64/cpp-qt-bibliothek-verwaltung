/* Tabellen-Header */
QHeaderView::section {
    background-color: #f8f9fa;
    color: #457B9D;
    font-weight: bold;
    font-size: 15px;
    border: none;
    padding: 10px 0;
}

QTableWidget {
    background: #FFFFFF;
    border-radius: 8px;
    font-size: 14px;
    border: 1px groove #b0b8c1;  
}

QTableWidget::item {
    padding-left: 10px;
}

/* --- TabWidget Styling für LendingRequestsWidget --- */
QTabWidget::pane {
    border: 1.5px solid #b0b8c1;
    border-radius: 8px;
    background: #FFFFF0;
    
}

QTabBar::tab {
    background: #f8f9fa;
    color: #457B9D;
    font-size: 15px;
    font-weight: bold;
    border: 1px solid #b0b8c1;
    border-bottom: none;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    min-width: 180px;
    min-height: 36px;
    max-height:50px;
    padding: 8px 18px;
}

QTabBar::tab:selected, QTabBar::tab:hover {
    background: #FFD166;
    color: #2c3e50;
    border-bottom: 2px solid #FFD166;
}

QTabBar::tab:!selected {
    
}

/* --- Tabellen für Anfragen und Rückgaben --- */
QTableWidget {
    background: #FFFFFF;
    border-radius: 8px;
    font-size: 14px;
    border: 1px groove #b0b8c1;
    selection-background-color: #e3eafc;
    selection-color: #2c3e50;
}

QHeaderView::section {
    background-color: #f8f9fa;
    color: #457B9D;
    font-weight: bold;
    font-size: 15px;
    border: none;
    padding: 10px 0;
}

QTableWidget::item {
    padding-left: 10px;
}

QTableWidget::item:selected {
    background: #e3eafc;
    color: #2c3e50;
}

